<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/custom_text_font_family</item>
        <item name="android:textViewStyle">@style/CustomTextViewTextFonts</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="DialogActivityTheme" parent="Theme.AppCompat.Dialog">
        <!--custom shape for rounded corners-->
        <item name="android:windowBackground">@drawable/custom_dialog_theme</item>
        <!--removes the shadows around the dialog activities-->
        <item name="android:backgroundDimAmount">0.1</item>
        <!--activated state color for radio button-->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!--Apply the same font as the entire app does-->
        <item name="fontFamily">@font/custom_text_font_family</item>
    </style>

    <style name="CustomTextViewTextFonts" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/custom_text_font_family</item>
    </style>

    <style name="CustomTextTabAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_circle</item>
    </style>

</resources>
