<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <style name="Material" parent="Widget.MaterialComponents.ExtendedFloatingActionButton"/>

    <style name="DialogActivityTheme" parent="Theme.AppCompat.Dialog">
        <!--custom shape for rounded corners-->
        <item name="android:windowBackground">@drawable/custom_dialog_theme</item>
        <!--removes the shadows around the dialog activities-->
        <item name="android:backgroundDimAmount">0.1</item>
        <!--activated state color for radio button-->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

</resources>
